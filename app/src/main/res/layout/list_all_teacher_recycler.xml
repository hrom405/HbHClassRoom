<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_teacher_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/list_teacher_imageView"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_teacher_ID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="123"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/list_teacher_ViewFullDetails"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="View Full Details" />

        </LinearLayout>

        <TextView
            android:id="@+id/list_teacher_Name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Pappu"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/list_teacher_Designation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Designation Designation"
            android:textSize="16dp"
            android:gravity="center_vertical"/>

    </LinearLayout>
</RelativeLayout>