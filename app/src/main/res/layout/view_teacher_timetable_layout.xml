<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_teacher_tt_teacherID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Teacher ID"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/view_teacher_tt_className"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Class"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/view_teacher_tt_Spinner_selectDAY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:entries="@array/Select_Week_Day">

        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/LL1"
        android:layout_above="@+id/add_timetable_button"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="5dp">
        <LinearLayout
            android:id="@+id/LL2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nine_to_ten"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="09:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/view_teacher_tt_subject1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subject 1"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/view_teacher_tt_RoomNO1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Room"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/view_teacher_tt_ClassID1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="ClassID"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ten_to_eleven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="10:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/view_teacher_tt_subject2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subject 2"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/view_teacher_tt_RoomNO2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Room"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/view_teacher_tt_ClassID2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="ClassID"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/eleven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="11:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/view_teacher_tt_subject3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subject 3"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/view_teacher_tt_RoomNO3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Room"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/view_teacher_tt_ClassID3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="ClassID"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/twelve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="12:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/view_teacher_tt_subject4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subject 4"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/view_teacher_tt_RoomNO4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Room"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/view_teacher_tt_ClassID4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="ClassID"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="01:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/view_teacher_tt_subject5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subject 5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/view_teacher_tt_RoomNO5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Room"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/view_teacher_tt_ClassID5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="ClassID"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="02:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/view_teacher_tt_subject6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subject 6"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/view_teacher_tt_RoomNO6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Room"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/view_teacher_tt_ClassID6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="ClassID"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="03:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/view_teacher_tt_subject7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subject 7"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/view_teacher_tt_RoomNO7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Room"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/view_teacher_tt_ClassID7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="ClassID"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="04:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/view_teacher_tt_subject8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subject 8"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/view_teacher_tt_RoomNO8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Room"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/view_teacher_tt_ClassID8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="ClassID"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/view_teacher_TT_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="ADD TIME table"
        android:textSize="16dp"/>

</RelativeLayout>