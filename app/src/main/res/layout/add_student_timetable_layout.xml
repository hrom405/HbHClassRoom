<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:id="@+id/add_teacher_timetable_teacherID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:hint="Enter Teacher's ID        Ex: 12345"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/add_teacher_timetable_teacherClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_teacher_timetable_teacherID"
        android:hint="Enter Class                    Ex: ICE1"
        android:inputType="text"/>
        <EditText
            android:id="@+id/add_teacher_timetable_DAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_teacher_timetable_teacherClass"
            android:hint="Enter DAY                      Ex: MONDAY"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/LL1"
        android:layout_above="@+id/add_timetable_button"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="5dp">
        <LinearLayout
            android:id="@+id/LL2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nine_to_ten"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="09:00-10:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/add_subject1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter Subject 1"
                android:inputType="text"/>
            <EditText
                android:id="@+id/add_tchrID1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Tchr ID"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ten_to_eleven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="10:00-11:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/add_subject2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter Subject 2"
                android:inputType="text"/>
            <EditText
                android:id="@+id/add_tchrID2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Tchr ID"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/eleven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="11:00-12:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/add_subject3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter Subject 3"
                android:inputType="text"/>
            <EditText
                android:id="@+id/add_tchrID3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Tchr ID"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/twelve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="12:00-01:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/add_subject4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter Subject 4"
                android:inputType="text"/>

            <EditText
                android:id="@+id/add_tchrID4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Tchr ID"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="01:00-02:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/add_subject5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter Subject 5"
                android:inputType="text"/>
            <EditText
                android:id="@+id/add_tchrID5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Tchr ID"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="02:00-03:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/add_subject6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter Subject 6"
                android:inputType="text"/>
            <EditText
                android:id="@+id/add_tchrID6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Tchr ID"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="03:00-04:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/add_subject7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter Subject 7"
                android:inputType="text"/>
            <EditText
                android:id="@+id/add_tchrID7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Tchr ID"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="04:00-05:00"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/add_subject8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Enter Subject 8"
                android:inputType="text"/>
            <EditText
                android:id="@+id/add_tchrID8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Tchr ID"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/add_timetable_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="ADD TIME table"
        android:textSize="16dp"/>

</RelativeLayout>